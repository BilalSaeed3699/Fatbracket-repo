<script>

    function sendemail()
    {
        $("#txtemail").removeClass("is-valid");
        $("#txtemail").removeClass("is-invalid");

        $("#lblemailerror").fadeOut();
        $("#lblloginerror").fadeOut();

        var email = $("#txtemail").val();


        if (email == "") {
            $("#lblemailerror").fadeIn();
            $("#txtemail").removeClass("is-valid");
            $("#txtemail").removeClass("is-invalid");
            $("#txtemail").addClass("is-invalid");
            return;
        }
        else {
            var expr = /^([\w-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;
            if (!expr.test(email)) {
                $("#lblemailformat").fadeIn();
                $("#txtemail").removeClass("is-valid");
                $("#txtemail").removeClass("is-invalid");
                $("#txtemail").addClass("is-invalid");
                return;
            }
            else {
                $("#lblemailformat").fadeOut();
                $("#txtemail").removeClass("is-valid");
                $("#txtemail").removeClass("is-invalid");
                $("#txtemail").addClass("is-valid");

                var UserInfo = {};
                UserInfo.Email = email;

                document.getElementById("btnsendemail").innerHTML = " <img id='LoginLoader' style='Width: 34px!important; height: 30px!important' src='/dashboardassets/img/loaders.gif' /> &nbsp; Please Wait...";
                document.getElementById("btnsendemail").style.backgroundColor = 'black';
                document.getElementById("btnsendemail").style.borderColor = "black";
                document.getElementById("btnsendemail").disabled = true;


                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Sendemail", "Account")',
                    data: '{UserInformation: ' + JSON.stringify(UserInfo) + '}',
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (result)
                    {

                        document.getElementById("btnsendemail").innerHTML = "Send Reset Link";
                        document.getElementById("btnsendemail").style.backgroundColor = '#ff7218';
                        document.getElementById("btnsendemail").style.borderColor = "#ff7218";
                        document.getElementById("btnsendemail").style.boxshadow = "0 0.125rem 0.25rem 0 rgb(255 113 23)";
                        document.getElementById("btnsendemail").disabled = false;
                        
                        if (result.status == 2)
                        {
                            $("#lblloginerror").fadeOut();
                            $("#lblemailsuccess").fadeIn();
                            //$("#lblduplicateemail").fadeIn();
                            //$("#txtemail").removeClass("is-valid");
                            //$("#txtemail").removeClass("is-invalid");
                            //$("#txtemail").addClass("is-invalid");
                            //document.getElementById("btnsendemail").disabled = true;
                            //document.getElementById("btnsendemail").style.backgroundColor = 'black';
                            //document.getElementById("btnsendemail").style.borderColor = "black";
                        }
                        else
                        {
                            $("#lblemailsuccess").fadeOut();
                            $("#lblloginerror").fadeIn();
                            $("#txtemail").removeClass("is-valid");
                            $("#txtemail").removeClass("is-invalid");
                            $("#txtemail").addClass("is-invalid");
                            //document.getElementById("btnsendemail").disabled = true;
                            //document.getElementById("btnsendemail").style.backgroundColor = 'black';
                            //document.getElementById("btnsendemail").style.borderColor = "black";

                            //$("#lblduplicateemail").fadeOut();
                            //$("#txtemail").removeClass("is-valid");
                            //$("#txtemail").removeClass("is-invalid");
                            //$("#txtemail").addClass("is-btnsendemail");
                            //document.getElementById("btnregister").disabled = false;

                            //document.getElementById("btnsendemail").style.backgroundColor = '#ff7218';
                            //document.getElementById("btnsendemail").style.borderColor = "#ff7218";
                            //document.getElementById("btnsendemail").style.boxshadow = "0 0.125rem 0.25rem 0 rgb(255 113 23)";
                            }
                        }

                });
            }
        }


    }
</script>