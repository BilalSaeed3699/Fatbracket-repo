<script>

    function signin()
    {


        $("#txtemail").removeClass("is-valid");
        $("#txtemail").removeClass("is-invalid");

        $("#txtpassword").removeClass("is-valid");
        $("#txtpassword").removeClass("is-invalid");

        $("#lblloginerror").fadeOut();
        $("#lblpassworderror").fadeOut();

        var email = $("#txtemail").val();
        var password = $("#txtpassword").val();

        if (email == "") {
            $("#lblemailerror").fadeIn();
            $("#txtemail").removeClass("is-valid");
            $("#txtemail").removeClass("is-invalid");
            $("#txtemail").addClass("is-invalid");
            return;
        }
        else
        {
            $("#lblemailerror").fadeOut();
            $("#txtemail").removeClass("is-valid");
            $("#txtemail").removeClass("is-invalid");
            $("#txtemail").addClass("is-valid");
        }

        if (password == "") {
            $("#lblpassworderror").fadeIn();
            $("#txtpassword").removeClass("is-valid");
            $("#txtpassword").removeClass("is-invalid");
            $("#txtpassword").addClass("is-invalid");
            return;
        }
        else {
            $("#lblpassworderror").fadeOut();
            $("#txtpassword").removeClass("is-valid");
            $("#txtpassword").removeClass("is-invalid");
            $("#txtpassword").addClass("is-valid");
        }



        var UserInfo = {};
        UserInfo.Email = email;
        UserInfo.Password = password;

        document.getElementById("btnLogin").innerHTML = " <img id='LoginLoader' style='Width: 34px!important; height: 30px!important' src='/dashboardassets/img/loaders.gif' /> &nbsp; Please Wait...";
        document.getElementById("btnLogin").style.backgroundColor = '#010101';
        document.getElementById("btnLogin").style.borderColor = "#010101";
        document.getElementById("btnLogin").disabled = true;


    $.ajax({
        type: "POST",
        url: '@Url.Action("UserLogin", "Account")',
        data: '{UserInformation: ' + JSON.stringify(UserInfo) + '}',
        dataType: "json",
        contentType: "application/json; charset=utf-8",
            success: function (result) {

                if (result.status == "-1") {

                    document.getElementById("lbloginerrordetail").innerHTML = "User not registered ";
                    $("#lblloginerror").fadeIn();
                    $("#lblpassworderror").fadeOut();

                    $("#txtemail").removeClass("is-valid");
                    $("#txtemail").removeClass("is-invalid");
                    $("#txtemail").addClass("is-invalid");

                    $("#txtpassword").removeClass("is-valid");
                    $("#txtpassword").removeClass("is-invalid");
                   

                    document.getElementById("btnLogin").innerHTML = "Sign in";
                    document.getElementById("btnLogin").style.backgroundColor = '#ff7218';
                    document.getElementById("btnLogin").style.borderColor = "#ff7218";
                    document.getElementById("btnLogin").style.boxshadow = "0 0.125rem 0.25rem 0 rgb(255 113 23)";
                    document.getElementById("btnLogin").disabled = false;
                }
                else if (result.status == "-2") {
                    //document.getElementById("ErrorAccessMessage").innerHTML = "Incorrect password";
                    //document.getElementById("ErrorAccessMessage").style.color = "white";
                    //document.getElementById("ErrorSelectAccessLevl").style.backgroundColor = '#ef0255';
                    //document.getElementById("ErrorSelectAccessLevl").style.borderColor = "#ef0255";
                    //$("#ErrorSelectAccessLevl").fadeIn();
                    //$("#ErrorSelectAccessLevl").fadeOut(8000);

                    $("#lblloginerror").fadeOut();
                    document.getElementById("lbpassworderrordetail").innerHTML = "Incorrect password";
                    $("#lblpasswordloginerror").fadeIn();



                    $("#txtemail").removeClass("is-valid");
                    $("#txtemail").removeClass("is-invalid");
                    
                    $("#txtpassword").removeClass("is-valid");
                    $("#txtpassword").removeClass("is-invalid");
                    $("#txtpassword").addClass("is-invalid");

                    document.getElementById("btnLogin").innerHTML = "Sign in";
                    document.getElementById("btnLogin").style.backgroundColor = '#ff7218';
                    document.getElementById("btnLogin").style.borderColor = "#ff7218";
                    document.getElementById("btnLogin").style.boxshadow = "0 0.125rem 0.25rem 0 rgb(255 113 23)";
                    document.getElementById("btnLogin").disabled = false;
                }

                else if (result.status == "-3") {
                    //document.getElementById("ErrorAccessMessage").innerHTML = "User is not active";
                    //document.getElementById("ErrorAccessMessage").style.color = "white";
                    //document.getElementById("ErrorSelectAccessLevl").style.backgroundColor = '#ef0255';
                    //document.getElementById("ErrorSelectAccessLevl").style.borderColor = "#ef0255";

                    //$("#ErrorSelectAccessLevl").fadeIn();
                    //$("#ErrorSelectAccessLevl").fadeOut(8000);


                    $("#lblpasswordloginerror").fadeOut();
                    document.getElementById("lbloginerrordetail").innerHTML = "User is not active";
                    $("#lblloginerror").fadeIn();

                    $("#txtemail").removeClass("is-valid");
                    $("#txtemail").removeClass("is-invalid");
                    $("#txtemail").addClass("is-invalid");

                    $("#txtpassword").removeClass("is-valid");
                    $("#txtpassword").removeClass("is-invalid");

                    document.getElementById("btnLogin").innerHTML = "Sign in";
                    document.getElementById("btnLogin").style.backgroundColor = '#ff7218';
                    document.getElementById("btnLogin").style.borderColor = "#ff7218";
                    document.getElementById("btnLogin").style.boxshadow = "0 0.125rem 0.25rem 0 rgb(255 113 23)";
                    document.getElementById("btnLogin").disabled = false;
                }


                else if (result.status == "1") {
                    window.location.href = result.url;

                    $("#txtemail").removeClass("is-valid");
                    $("#txtemail").removeClass("is-invalid");

                    $("#txtpassword").removeClass("is-valid");
                    $("#txtpassword").removeClass("is-invalid");

                    $("#txtemail").addClass("is-valid");
                    $("#txtpassword").addClass("is-valid");

                }
            },
                error: function (err) {

                }
                });


    }
</script>